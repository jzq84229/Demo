<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_btn_color_normal"
    tools:context="com.zhang.demo.ytx.ui.LauncherActivity">

    <LinearLayout
        android:id="@+id/welcome_icon_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/welcome_logo_iv_dest"
            android:layout_width="236dp"
            android:layout_height="236dp"
            android:src="@drawable/hua" />

        <TextView
            android:id="@+id/welcome_hint1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/app_name"
            android:textColor="#ffd9ffcc"
            android:textSize="24sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/welcome_hint2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffd9ffcc"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvCopyRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/copyright"
            android:textColor="@color/white"
            android:textSize="13sp" />


    </LinearLayout>
</FrameLayout>
